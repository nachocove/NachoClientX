<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:background="?attr/selectableItemBackground"
    android:paddingLeft="?attr/folderItemPaddingLeft"
    android:paddingTop="?attr/folderItemPaddingLeft">
    <View
        android:id="@+id/folder_indent"
        android:layout_width="0dp"
        android:layout_height="0dp" />
    <ImageView
        android:id="@+id/folder_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="top"
        android:src="@drawable/folder_icon_default"
        android:layout_marginRight="?attr/folderItemPaddingLeft" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1.0"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="?attr/folderItemPaddingRight"
            android:paddingBottom="?attr/folderItemPaddingLeft">
            <TextView
                android:id="@+id/folder_name"
                tools:text="Inbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textAppearance="?attr/textAppearanceListItem" />
            <TextView
                android:id="@+id/folder_account"
                tools:text="Gmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textAppearance="?attr/textAppearanceListItemDetail" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/colorListItemSeparator" />
    </LinearLayout>
</LinearLayout>