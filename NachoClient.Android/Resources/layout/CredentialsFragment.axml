<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/NachoGreen">
    <LinearLayout
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <TextView
            android:text="@string/enter_credentials"
            android:textSize="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:padding="20dip"
            android:gravity="center"
            android:textColor="@android:color/white" />
        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center" />
        <NachoClient.AndroidClient.RoundedImageView
            android:id="@+id/service_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center" />
        <TextView
            android:id="@+id/service_prompt"
            android:textColor="@android:color/white"
            android:textSize="17dp"
            android:textStyle="normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:paddingTop="20dp"
            android:text="@string/get_credentials"
            android:paddingBottom="20dp" />
        <EditText
            android:id="@+id/email"
            android:textSize="17dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:hint="@string/email_hint"
            android:drawableLeft="@drawable/Loginscreen_2"
            android:drawablePadding="10dp"
            android:background="@android:color/white"
            android:padding="5dp"
            android:minHeight="40dp"
            android:maxHeight="40dp" />
        <EditText
            android:id="@+id/password"
            android:password="true"
            android:textSize="17dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:hint="@string/password_hint"
            android:drawableLeft="@drawable/Loginscreen_3"
            android:drawablePadding="10dp"
            android:background="@android:color/white"
            android:padding="5dp"
            android:minHeight="40dp"
            android:maxHeight="40dp"
            android:layout_marginTop="20dp" />
        <Button
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:keepScreenOn="true"
            android:text="@string/submit"
            android:textSize="17dp"
            android:textStyle="bold"
            android:id="@+id/submit"
            android:textColor="@android:color/white"
            android:background="@color/NachoSubmitButton"
            android:minHeight="40dp"
            android:maxHeight="40dp"
            android:layout_marginTop="20dp" />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:keepScreenOn="true"
            android:gravity="center"
            android:padding="3dp"
            android:text="@string/customersupport"
            android:textSize="14dp"
            android:textStyle="normal"
            android:id="@+id/support"
            android:layout_centerInParent="true"
            android:textColor="@android:color/white"
            android:background="@color/NachoGreen"
            android:layout_marginTop="20dp" />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:src="@drawable/BootScreen_5" />
</RelativeLayout>