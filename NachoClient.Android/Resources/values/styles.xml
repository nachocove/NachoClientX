<resources>
    <style name="NachoListItemDetailTextAppearance" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#A4A4A4</item>
    </style>

    <style name="NachoListItemHeaderTextAppearance" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/NachoMainGreen</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NachoAboutIntroTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/NachoMainGreen</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NachoTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/NachoMainGreen</item>
        <item name="colorPrimaryDark">@color/NachoDarkGreen</item>
        <item name="colorAccent">@color/NachoBrightGreen</item>
        <item name="colorAccentDark">@color/NachoDarkenedBrightGreen</item>
        <item name="colorListItemSeparator">#E0E0E0</item>
        <item name="colorListGroupSeparator">#F0F0F0</item>
        <item name="textAppearanceListItemDetail">@style/NachoListItemDetailTextAppearance</item>
        <item name="textAppearanceListItemHeader">@style/NachoListItemHeaderTextAppearance</item>
        <item name="textAppearanceAboutIntro">@style/NachoAboutIntroTextAppearance</item>
    </style>

    <style name="NachoTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NachoTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="NachoTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- old -->
    <!-- TODO: phase out and remove -->
    <style name="Theme.NachoMail" parent="Base.Theme.NachoMail" />
    <style name="Base.Theme.NachoMail" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textAllCaps">false</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/NachoGreen</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>
    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@anim/fast_fade_in</item>
        <item name="android:windowExitAnimation">@anim/fast_fade_out</item>
    </style>
    <!-- end old -->
</resources>