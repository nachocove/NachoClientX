<resources>

    <style name="TextAppearanceNachoListItemDetail" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#A4A4A4</item>
    </style>

    <style name="TextAppearanceNachoListItemHeader" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/NachoMainGreen</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearanceNachoAboutIntro" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/NachoMainGreen</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearanceNachoWelcome" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="TextAppearanceNachoWelcomeButton" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearanceNachoAccountSwitcherItem" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="TextAppearanceNachoAccountSwitcherItemDetail" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#d6dfe0</item>
    </style>

    <style name="TextAppearanceNachoAccountSwitcherItemUnread" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="TextAppearanceNachoMessageItem" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearanceNachoMessageViewSender" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearanceNachoMessageViewSubject" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="TextAppearanceNachoMessageThreadCount" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="NachoTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/NachoMainGreen</item>
        <item name="colorPrimaryDark">@color/NachoDarkGreen</item>
        <item name="colorAccent">@color/NachoDarkenedBrightGreen</item>
        <item name="colorListItemSeparator">#E0E0E0</item>
        <item name="colorListGroupSeparator">#F0F0F0</item>
        <item name="textAppearanceListItemDetail">@style/TextAppearanceNachoListItemDetail</item>
        <item name="textAppearanceListItemHeader">@style/TextAppearanceNachoListItemHeader</item>
        <item name="textAppearanceAboutIntro">@style/TextAppearanceNachoAboutIntro</item>
        <item name="textAppearanceWelcome">@style/TextAppearanceNachoWelcome</item>
        <item name="textAppearanceWelcomeButton">@style/TextAppearanceNachoWelcomeButton</item>
        <item name="textAppearanceAccountSwitcherItem">@style/TextAppearanceNachoAccountSwitcherItem</item>
        <item name="textAppearanceAccountSwitcherItemDetail">@style/TextAppearanceNachoAccountSwitcherItemDetail</item>
        <item name="textAppearanceAccountSwitcherItemUnread">@style/TextAppearanceNachoAccountSwitcherItemUnread</item>
        <item name="textAppearanceMessageItem">@style/TextAppearanceNachoMessageItem</item>
        <item name="textAppearanceMessageThreadCount">@style/TextAppearanceNachoMessageThreadCount</item>
        <item name="textAppearanceMessageViewSender">@style/TextAppearanceNachoMessageViewSender</item>
        <item name="textAppearanceMessageViewSubject">@style/TextAppearanceNachoMessageViewSubject</item>
        <item name="textAppearanceContactItem">@style/TextAppearanceNachoMessageItem</item>
        <item name="messageItemPaddingLeft">@dimen/nacho_item_padding_left</item>
        <item name="messageItemPaddingRight">@dimen/nacho_item_padding_right</item>
        <item name="messageItemPaddingTop">@dimen/nacho_item_padding_top</item>
        <item name="messageItemPaddingBottom">@dimen/nacho_item_padding_bottom</item>
        <item name="messageViewPaddingLeft">@dimen/nacho_item_padding_left</item>
        <item name="messageViewPaddingRight">@dimen/nacho_item_padding_right</item>
        <item name="messageHeaderViewPaddingTop">@dimen/nacho_item_padding_top</item>
        <item name="messageHeaderViewPaddingBottom">@dimen/nacho_item_padding_bottom</item>
        <item name="folderItemPaddingLeft">@dimen/nacho_item_padding_left</item>
        <item name="folderItemPaddingRight">@dimen/nacho_item_padding_right</item>
        <item name="folderItemPaddingTop">@dimen/nacho_item_padding_top</item>
        <item name="folderItemPaddingBottom">@dimen/nacho_item_padding_bottom</item> 
        <item name="contactItemPaddingLeft">@dimen/nacho_item_padding_left</item>
        <item name="contactItemPaddingRight">@dimen/nacho_item_padding_right</item>
        <item name="contactItemPaddingTop">@dimen/nacho_item_padding_top</item>
        <item name="contactItemPaddingBottom">@dimen/nacho_item_padding_bottom</item>
        <item name="messageComposeFieldPaddingLeft">@dimen/nacho_item_padding_left</item>
        <item name="messageComposeFieldPaddingRight">@dimen/nacho_item_padding_right</item>
        <item name="messageComposeFieldPaddingTop">@dimen/nacho_item_padding_top</item>
        <item name="messageComposeFieldPaddingBottom">@dimen/nacho_item_padding_bottom</item>
        <item name="accountPickerItemPaddingLeft">@dimen/nacho_item_padding_left</item>
        <item name="accountPickerItemPaddingRight">@dimen/nacho_item_padding_right</item>
        <item name="accountPickerItemPaddingTop">@dimen/nacho_item_padding_top</item>
        <item name="accountPickerItemPaddingBottom">@dimen/nacho_item_padding_bottom</item>
        <item name="filterbarPaddingLeft">@dimen/nacho_item_padding_left</item>
        <item name="filterbarPaddingRight">@dimen/nacho_item_padding_left</item>
        <item name="filterbarPaddingTop">0dp</item>
        <item name="filterbarPaddingBottom">0dp</item>
        <item name="filterbarColor">#e6e7e8</item>
        <item name="filterbarSeparatorColor">#c3c4c5</item>
    </style>

    <style name="NachoTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NachoTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="NachoTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- old -->
    <!-- TODO: phase out and remove -->
    <style name="Theme.NachoMail" parent="Base.Theme.NachoMail" />
    <style name="Base.Theme.NachoMail" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textAllCaps">false</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/NachoGreen</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>
    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@anim/fast_fade_in</item>
        <item name="android:windowExitAnimation">@anim/fast_fade_out</item>
    </style>
    <!-- end old -->
</resources>